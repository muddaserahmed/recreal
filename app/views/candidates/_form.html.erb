    <%= f.label :available_in %>
    <%= f.number_field :available_in %>
  </div>
  <div class="field">
    <%= f.label :contact_no %>
    <%= f.text_field :contact_no %>
  </div>
  <div class="field">
    <%= f.label :salary_expectation %>
    <%= f.text_field :salary_expectation %>
  </div>
  <div class="field">
    <%= f.label :skype_name %>
    <%= f.text_field :skype_name %>
  </div>
